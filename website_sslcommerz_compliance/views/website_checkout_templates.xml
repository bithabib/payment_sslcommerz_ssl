<odoo>

    <!-- Add Terms Agreement Checkbox at Checkout -->
    <template id="checkout_terms_agreement" inherit_id="website_sale.payment" name="Checkout Terms Agreement">
        <xpath expr="//div[@id='payment_method']" position="before">
            <div t-if="request.website.compliance_require_terms_agreement"
                 class="card mb-4 compliance-terms-agreement">
                <div class="card-body">
                    <div class="form-check">
                        <input type="checkbox"
                               class="form-check-input"
                               id="compliance_terms_checkbox"
                               name="compliance_terms_checkbox"
                               required="required"/>
                        <label class="form-check-label" for="compliance_terms_checkbox">
                            I have read and agree to the
                            <a href="/terms-and-conditions" target="_blank" class="text-primary">Terms &amp; Conditions</a>,
                            <a href="/privacy-policy" target="_blank" class="text-primary">Privacy Policy</a>, and
                            <a href="/return-refund-policy" target="_blank" class="text-primary">Return &amp; Refund Policy</a>.
                            <span class="text-danger">*</span>
                        </label>
                    </div>
                    <small class="text-muted d-block mt-2">
                        <i class="fa fa-info-circle me-1"/>
                        You must agree to our policies before placing your order.
                    </small>
                </div>
            </div>
        </xpath>
    </template>

</odoo>
