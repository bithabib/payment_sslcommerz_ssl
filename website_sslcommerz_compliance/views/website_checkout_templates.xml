<odoo>

    <!-- Add Terms Agreement Checkbox right above the Pay Now button -->
    <template id="checkout_terms_agreement" inherit_id="payment.submit_button" name="Checkout Terms Agreement">
        <xpath expr="//button[@name='o_payment_submit_button']" position="before">
            <div t-if="request.website.compliance_require_terms_agreement"
                 class="compliance-terms-agreement w-100 mb-3">
                <div class="form-check">
                    <input type="checkbox"
                           class="form-check-input"
                           id="compliance_terms_checkbox"
                           name="compliance_terms_checkbox"
                           required="required"/>
                    <label class="form-check-label" for="compliance_terms_checkbox">
                        I have read and agree to the
                        <a href="/terms-and-conditions" target="_blank" class="text-primary fw-bold">Terms &amp; Conditions</a>,
                        <a href="/privacy-policy" target="_blank" class="text-primary fw-bold">Privacy Policy</a>, and
                        <a href="/return-refund-policy" target="_blank" class="text-primary fw-bold">Return &amp; Refund Policy</a>.
                        <span class="text-danger">*</span>
                    </label>
                </div>
            </div>
        </xpath>
    </template>

</odoo>
